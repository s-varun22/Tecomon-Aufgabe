{
	"compilerOptions": {
		"target": "es2024",
		"lib": ["es2024", "dom"],
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "dist",
		"rootDir": "src",
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"resolveJsonModule": true
	},
	"include": ["src"]
}
